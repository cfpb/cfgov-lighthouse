{% extends "./base.njk" %}

{% block css %}
  <link rel="stylesheet" href="../../static/css/main.css">
{% endblock %}

{% block body %}
  {% for page in summaryReport.pages %}
    <p>
      <a href="{{ page.url }}">{{ page.url }}</a>
    </p>
    {% for report in page.reports %}
      <p>
        <a class="report-link" href="{{ report.jsonFilename }}">
          Full report ({{ report.name }})
        </a>
      </p>
      <ul>
        {% for metric, score in report.summary -%}
          <li>{{ metric }}: {{ score }}</li>
        {% endfor %}
      </ul>
    {% endfor %}
  {% endfor %}
{% endblock %}

{% block js %}
  <script src="../../static/js/report.js"></script>
{% endblock %}
